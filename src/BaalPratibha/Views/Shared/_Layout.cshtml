<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/css/site.min.css" rel="stylesheet" />
    <script src="~/js/site.min.js"></script>
    @{ await Html.RenderPartialAsync("_FavIconHeadLinksPartial"); }
    @RenderSection("meta", false);
</head>
<body>
    <div class="container">


        <nav class="navbar navbar-fixed-top navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="/">
                        <img src="/images/baal.png" height="32" width="32" style="display: inline" />
                        Baal Pratibha
                    </a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav nav-pills">
                        <li><a asp-controller="Contestant" asp-action="All">Contestants</a></li>
                        <li><a href="#">Videos</a></li>
                        @*<li>
                                <form class="navbar-form" role="search" asp-controller="Search">
                                    <div class="input-group">
                                        <input type="search" name="SearchString" class="form-control pull-right input" placeholder="Search contestants..." />
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                        </span>
                                    </div>
                                </form>
                            </li>*@
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div><!--/.nav-collapse -->
            </div>

        </nav>
        <div style="padding-top: 20px" class="body-content">
            @RenderBody()

        </div>

        <div class="navbar navbar-default navbar-fixed-bottom">
            <div class="container-fluid">
                <ul class="nav navbar-nav nav-pills navbar-right hidden-xs">
                    <li>
                        <a>About</a>
                    </li>
                    <li>
                        <a>Contact</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-text">
                    <li>
                        <small>
                            Developed by Nabin Karki Thapa. <a style="display: inline; padding: 0" href="http://www.lahuri.com.au">Lahuri TV</a>
                        </small>
                    </li>
                </ul>

            </div>
        </div>

    </div>
    @await Component.InvokeAsync("NToastNotify.Toastr")
    @RenderSection("scripts", required: false)
</body>
</html>
